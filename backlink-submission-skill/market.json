{
  "name": "backlink-submission-skill",
  "displayName": "Backlink Submission",
  "description": "Automate backlink submission workflow using MyBacklinks MCP and browser automation. Fetches project info, iterates through free backlink resources, and submits links following howToSubmit instructions.",
  "version": "1.0.0",
  "author": {
    "name": "MyBacklinks",
    "url": "https://mybacklinks.app"
  },
  "license": "MIT",
  "homepage": "https://mybacklinks.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/hekmon8/mybacklinks-tools",
    "directory": "backlink-submission-skill"
  },
  "keywords": [
    "SEO",
    "backlink",
    "automation",
    "link-building",
    "mybacklinks",
    "browser-automation",
    "claude-skill"
  ],
  "categories": [
    "SEO",
    "Automation",
    "Marketing"
  ],
  "triggers": [
    "submit backlinks",
    "提交外链",
    "批量提交外链",
    "backlink submission",
    "auto submit links"
  ],
  "dependencies": {
    "mcp": {
      "mybacklinks": {
        "url": "https://mybacklinks.app/mcp",
        "required": true,
        "description": "MyBacklinks MCP for project and resource management"
      },
      "chrome-dev-tools": {
        "required": true,
        "description": "Browser automation for form filling and submission"
      }
    }
  },
  "permissions": [
    "browser:navigate",
    "browser:interact",
    "browser:screenshot"
  ],
  "config": {
    "maxRetries": 3,
    "retryDelay": 2000,
    "screenshotOnError": true,
    "skipPaidResources": true,
    "skipLoginRequired": true
  },
  "i18n": {
    "zh": {
      "displayName": "外链提交助手",
      "description": "自动化外链提交流程，使用 MyBacklinks MCP 和浏览器自动化。获取项目信息，遍历免费外链资源，根据 howToSubmit 指令自动提交。"
    }
  }
}

